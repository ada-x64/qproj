{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run game",
      "type": "shell",
      "command": "./scripts/cargo-wsl",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run terrain-editor",
      "type": "shell",
      "command": "./scripts/cargo-wsl",
      "options": {
        "env": {
          "PKG_NAME": "tools",
          "BIN_NAME": "terrain-editor"
        }
      }
    },
    {
      "label": "debug game with windbg",
      "type": "shell",
      "command": "./scripts/cargo-wsl",
      "options": {
        "env": {
          "WINDBG": "true"
        }
      }
    },
    {
      "label": "debug game with renderdoc",
      "type": "shell",
      "command": "./scripts/cargo-wsl",
      "options": {
        "env": {
          "RENDERDOC": "true"
        }
      }
    }
  ]
}