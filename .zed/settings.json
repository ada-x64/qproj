{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "features": "all",
        },
        "check": {
          "command": "clippy",
          "features": "all",
          "extraArgs": ["--target-dir=target/rust-analyzer"],
          "workspace": false,
        },
      },
    },
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "basedpyright"],
    },
  },
}
